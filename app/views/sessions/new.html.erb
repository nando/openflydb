<div class="page-header">
  <h2>Inicio de sesión</h2>
</div>
<%= form_tag '/session', :class => 'form-horizontal' do %>
  <div class="control-group">
    <%= label_tag :email, 'Email', :class => 'control-label' %>
    <div class="controls">
      <%= text_field_tag :email, nil, :class => 'medium text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :password, 'Contraseña', :class => 'control-label' %>
    <div class="controls">
      <%= password_field_tag :password, nil, :class => 'medium text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= submit_tag 'Entrar', :class => 'btn btn-primary' %>
  </div>
<% end %>
