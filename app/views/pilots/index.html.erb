<% @pilots.each do |pilot| %>
  <tr>
    <td><%= pilot.fsdb_id %></td>
    <td><strong><%= "#{pilot.name} #{pilot.surname}" %></strong></td>
    <td><%= pilot.nationality.upcase %></td>
    <td><%= pilot.club_name.upcase %></td>
    <td><%= pilot.glider_manuf.upcase %> <%= pilot.glider_model %></td>
