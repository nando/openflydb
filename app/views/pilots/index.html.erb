<h2>Pilotos inscritos</h2>

<table style="clear: left; width: 780px;">
  <tr>
    <th width="1%">#</th>
    <th>Nombre</th>
    <th>Nat</th>
    <th>Club</th>
    <th>Ala</th>
    <th width="1%">Tipo</th>
  </tr>

<% @pilots.each do |pilot| %>
  <tr>
    <td><%= pilot.fsdb_id %></td>
    <td><%= "#{pilot.name} #{pilot.surname}" %></td>
    <td><%= pilot.nationality %></td>
    <td><%= pilot.club_name %></td>
    <td><%= pilot.glider_manuf.upcase %> <%= pilot.glider_model %></td>
    <td><%= pilot.glider_type %></td>
  </tr>
<% end %>
</table>
