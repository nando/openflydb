<h2>Gestión de pilotos inscritos</h2>

<table style="clear: left">
  <tr>
    <th>#</th>
    <th>CIVL</th>
    <th>Nombre</th>
    <th>Nat</th>
    <th>Club</th>
    <th>Ciudad</th>
    <th>Teléfono</th>
    <th>Contacto</th>
    <th>Teléfono</th>
    <th>Fecha inscr.</th>
    <th>€</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pilots.each do |pilot| %>
  <tr>
    <td><%= pilot.fsdb_id %></td>
    <td><%= pilot.civl_id %></td>
    <td><%= "#{pilot.name} #{pilot.surname}" %></td>
    <td><%= pilot.nationality %></td>
    <td><%= pilot.club_name %></td>
    <td><%= pilot.city %></td>
    <td><%= pilot.phone %></td>
    <td><%= pilot.contact_name %></td>
    <td><%= pilot.contact_phone %></td>
    <td><%= l pilot.created_at, :format => :short %></td>
    <td><%= pilot.paid? ? 'Sí' : 'No' %></td>
    <td><%= link_to 'Ver', pilot %></td>
    <td><%= link_to 'PDF', pilot_path(pilot, :format => :pdf) %></td>
    <td><%= link_to('Editar', edit_pilot_path(pilot)) %></td>
    <td><%= button_to "Borrar", pilot, :method=>:delete, :confirm => "¿Seguro que quieres borrar a #{pilot.name} #{pilot.surname}?" %></td>
  </tr>
<% end %>
</table>

<br />

